<p style="font-family:verdana; font-size:20px; text-align:center" id="font"></p>

<script>
    function sleep(ms) {
      return new Promise(resolve => setTimeout(resolve, ms));
    }

    async function intro() {
      document.getElementById("font").innerHTML = "<br> Take a slow, deep breath in through your nose <br> "
      var msg = new SpeechSynthesisUtterance();
      msg.text = "Take a slow, deep breath in through your nose";
      window.speechSynthesis.speak(msg);
      await sleep(3000)

      document.getElementById("font").innerHTML = "<br> As you inhale count to 5 <br> "
      var msg = new SpeechSynthesisUtterance();
      msg.text = "As you inhale count to 5";
      window.speechSynthesis.speak(msg);
      await sleep(5000)

      document.getElementById("font").innerHTML = "<br> Exhale slowly through your mouth <br> "
      var msg = new SpeechSynthesisUtterance();
      msg.text = "Exhale slowly through your mouth";
      window.speechSynthesis.speak(msg);
      await sleep(3000)

      document.getElementById("font").innerHTML = "<br> As you exhale count to 5 <br> "
      var msg = new SpeechSynthesisUtterance();
      msg.text = "As you exhale count to 5";
      window.speechSynthesis.speak(msg);
      await sleep(5000)

      window.location.href = "/restart?restart=equal";
    }
    intro();
</script>
