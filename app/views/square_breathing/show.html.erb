<p style="font-family:verdana; font-size:20px; text-align:center" id="font"></p>

<script>
    function sleep(ms) {
      return new Promise(resolve => setTimeout(resolve, ms));
    }

    async function intro() {
      document.getElementById("font").innerHTML = "<br> Take a slow, deep breath in through your nose <br> "
      await sleep(3000)
      document.getElementById("font").innerHTML = "<br> As you inhale count to 4 <br> . "
      await sleep(5000)
      document.getElementById("font").innerHTML = "<br> Hold the breath for a count of 4 <br> .."
      await sleep(5000)
      document.getElementById("font").innerHTML = "<br> Exhale slowly through your mouth <br> "
      await sleep(5000)
      document.getElementById("font").innerHTML = "<br> As you exhale count to 4 <br> .: "
      await sleep(5000)
      document.getElementById("font").innerHTML = "<br> Before inhaling, hold your breath for a count of 4 <br> :: "
      await sleep(5000)
      window.location.href = "/restart?restart=square";
    }
    intro();
</script>
